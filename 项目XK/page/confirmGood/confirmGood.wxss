.main {
  width: 100%;
  height: 100%;
  background-color: #ececec;
  position: relative;
  /* background-color:red */
}

.goodsDetail {
  background-color: white;
}

.goodsInfo {
  width: 100%;
  height: 100rpx;
  position: relative;
}

.line {
  background-color: #ddd;
  font-size: 1px;
  margin-left: 5%;
}

.goodsInfo-img {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  top: 15rpx;
  left: 5%;
  position: absolute;
}

.goodsInfo-img image {
  width: 70rpx;
  height: 70rpx;
}

.goodsInfo-title {
  position: absolute;
  line-height: 100rpx;
  text-align: center;
  width: 60%;
  left: 20%;
  font-size: 17px;
}

.goodsInfo-price {
  position: absolute;
  right: 10rpx;
  line-height: 100rpx;
  font-size: 17px;
}

.goodsType {
  margin: 20rpx 0rpx;
  background-color: white;
  height: 100%;
}

.goodsType-type {
  position: relative;
  height: 70rpx;
  font-size: 15px;
  line-height: 70rpx;
}

.goodsType-count {
  position: relative;
  height: 70rpx;
  font-size: 15px;
  line-height: 70rpx;
}

.goodsType-typeText {
  left: 5%;
  position: absolute;
}

.goodsType-typeChoese {
  right: 5%;
  position: absolute;
}

.goodsType-countInput {
  right: 5%;
  position: absolute;
}

.goodsType-countText {
  left: 5%;
  position: absolute;
}

.paySection {
  background-color: white;
  height: 70rpx;
  text-align: center;
}

.addressSection {
  background-color: white;
  margin: 20rpx 0 auto;
}

.name-phone-box {
  display: flex;
  font-size: 17px;
}

.address-box {
  display: flex;
  font-size: 14px;
}

.name-phone-box view {
  margin: 0 10rpx auto;
}

.address-box view {
  margin: 0 10rpx auto;
}

/* 详细花费，运费加货物总价格 */

.detailCount {
  background-color: white;
  margin: 20rpx 0 auto;
}

.totalCount {
  width: 100%;
  background-color: greenyellow;
  margin: 20rpx 0 auto;
  position: fixed;
  bottom: 0rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
}

.totalCount-left {
  width: 50%;
  padding-left: 20rpx;
}

.totalCount-right {
  width: 50%;
  text-align: right;
  padding-right: 20rpx;
}

.detailCount-top {
  display: flex;
}

.detailCount-bottom {
  display: flex;
}

.detailCount-top-left {
  width: 50%;
  padding-left: 20rpx;
}

.detailCount-top-right {
  width: 50%;
  text-align: right;
  padding-right: 20rpx;
}

.detailCount-bottom-left {
  width: 50%;
  padding-left: 20rpx;
}

.detailCount-bottom-right {
  width: 50%;
  text-align: right;
  padding-right: 20rpx;
}
